@page
@model CalendarManagement.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Users</h1>
        </div>
        <div class="col text-end">
            <a asp-page="Create" class="btn btn-primary">Create New User</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Events Created</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.CreatedEvents.Count</td>
                    <td>@user.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!Model.Users.Any())
    {
        <div class="alert alert-info">
            No users found. <a asp-page="Create">Create your first user</a>.
        </div>
    }
</div>
