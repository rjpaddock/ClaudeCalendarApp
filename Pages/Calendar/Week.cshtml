@page "{year:int?}/{week:int?}"
@using System.Globalization
@model CalendarManagement.Pages.Calendar.WeekModel

@{
    ViewData["Title"] = $"Calendar - Week {Model.ViewModel.Week}";
}

<div class="container-fluid mt-3">
    <div class="row mb-3 align-items-center">
        <div class="col-md-4 d-flex align-items-center">
            <a asp-page="Week" asp-route-year="@Model.ViewModel.StartDate.AddDays(-7).Year"
               asp-route-week="@CultureInfo.CurrentCulture.Calendar.GetWeekOfYear(Model.ViewModel.StartDate.AddDays(-7), CalendarWeekRule.FirstDay, DayOfWeek.Sunday)"
               class="btn btn-outline-secondary me-2"
               title="Previous Week">
                <span aria-hidden="true">◄</span>
            </a>
            <h2 class="mb-0">Week @Model.ViewModel.Week - @Model.ViewModel.StartDate.ToString("MMM d") to @Model.ViewModel.EndDate.ToString("MMM d, yyyy")</h2>
            <a asp-page="Week" asp-route-year="@Model.ViewModel.StartDate.AddDays(7).Year"
               asp-route-week="@CultureInfo.CurrentCulture.Calendar.GetWeekOfYear(Model.ViewModel.StartDate.AddDays(7), CalendarWeekRule.FirstDay, DayOfWeek.Sunday)"
               class="btn btn-outline-secondary ms-2"
               title="Next Week">
                <span aria-hidden="true">►</span>
            </a>
        </div>
        <div class="col-md-4 text-center">
            <div class="btn-group" role="group">
                <a asp-page="Week" asp-route-year="@Model.ViewModel.StartDate.AddDays(-7).Year"
                   asp-route-week="@CultureInfo.CurrentCulture.Calendar.GetWeekOfYear(Model.ViewModel.StartDate.AddDays(-7), CalendarWeekRule.FirstDay, DayOfWeek.Sunday)"
                   class="btn btn-outline-secondary">
                    <span aria-hidden="true">◄</span> Previous
                </a>
                <a asp-page="Week" class="btn btn-outline-primary">This Week</a>
                <a asp-page="Week" asp-route-year="@Model.ViewModel.StartDate.AddDays(7).Year"
                   asp-route-week="@CultureInfo.CurrentCulture.Calendar.GetWeekOfYear(Model.ViewModel.StartDate.AddDays(7), CalendarWeekRule.FirstDay, DayOfWeek.Sunday)"
                   class="btn btn-outline-secondary">
                    Next <span aria-hidden="true">►</span>
                </a>
            </div>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="CreateEvent" class="btn btn-success">+ Create Event</a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <div class="btn-group" role="group">
                <a asp-page="Month" class="btn btn-outline-primary">Month</a>
                <a asp-page="Week" class="btn btn-primary">Week</a>
                <a asp-page="Day" class="btn btn-outline-primary">Day</a>
            </div>
        </div>
    </div>

    <div class="calendar-week">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 80px;">Time</th>
                    @foreach (var day in Model.ViewModel.Days)
                    {
                        <th class="@(day.IsToday ? "today" : "")">
                            @day.DayName
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var hour in Model.ViewModel.Hours)
                {
                    <tr>
                        <td class="time-slot">@hour:00</td>
                        @foreach (var day in Model.ViewModel.Days)
                        {
                            <td class="@(day.IsToday ? "today" : "") timeslot-cell"
                                onclick="window.location.href='@Url.Page("CreateEvent", new { year = day.Date.Year, month = day.Date.Month, day = day.Date.Day, hour = hour })'">
                                @{
                                    var hourEvents = day.Events.Where(e => e.StartDateTime.Hour == hour).ToList();
                                }
                                @foreach (var evt in hourEvents)
                                {
                                    <div class="event-block" onclick="event.stopPropagation()">
                                        <a asp-page="EventDetails" asp-route-id="@evt.Id" class="event-link">
                                            <strong>@evt.StartDateTime.ToString("h:mm tt")</strong><br />
                                            @evt.Title
                                        </a>
                                    </div>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
