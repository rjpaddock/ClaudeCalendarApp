@model CalendarManagement.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h1>Delete User</h1>

    <div class="alert alert-warning mt-4">
        <h4>Are you sure you want to delete this user?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("MMMM d, yyyy")</dd>

                <dt class="col-sm-3">Events Created</dt>
                <dd class="col-sm-9">@Model.CreatedEvents.Count</dd>

                <dt class="col-sm-3">Event Attendances</dt>
                <dd class="col-sm-9">@Model.EventAttendees.Count</dd>
            </dl>

            @if (Model.CreatedEvents.Any() || Model.EventAttendees.Any())
            {
                <div class="alert alert-danger mt-3">
                    <strong>Warning:</strong> This user has @Model.CreatedEvents.Count event(s) created and is attending @Model.EventAttendees.Count event(s). Deleting this user may affect these events.
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
